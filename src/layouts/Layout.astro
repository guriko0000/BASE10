<body>
  <Nav />
  <!-- <Nav/> -->
  <main class="l-main">
    <slot />
  </main>
  <!-- info -->
  <section class="p-info">
  <div class="l-inner">
    <h2 class="p-info__title">Contact</h2>
    <div class="p-info__content">
      <div class="p-info__item p-info__item--mail">
        <span class="p-info__icon"><img src="/assets/img/icon/icon_mail.svg" alt="" width="60" height="60" loading="lazy"></span>
        <h3 class="p-info__item-title">メールでご相談</h3>
        <div class="p-info__btn-warp">
          <a href="" class="p-info__btn">ご相談はこちら</a>
        </div>
      </div>
      <div class="p-info__item">
        <span class="p-info__icon"><img src="/assets/img/icon/icon_line.svg" alt="" width="60" height="60" loading="lazy"></span>
        <h3 class="p-info__item-title">LINEでご相談</h3>
        <div class="p-info__btn-warp">
          <a href="" class="p-info__btn p-info__btn--line">お気軽にご相談</a>
        </div>
      </div>
      <div class="p-info__item">
        <span class="p-info__icon"><img src="/assets/img/icon/icon_tel.svg" alt="" width="60" height="60" loading="lazy"></span>
        <h3 class="p-info__item-title">電話でご相談</h3>
        <div class="p-info__btn-warp">
          <a href="tel:03-6883-8292" class="p-info__tel">03-6883-8292</a>
        </div>
      </div>
    </div>
  </div>
  </section>
  <FixedCta />
  <!-- footer -->
  <footer class="l-footer">
    <div class="l-inner">
      <div class="l-footer__content">
        <div class="l-footer__logo">
          <img src="/assets/img/common/logo-white.svg" alt="" width="122" height="36" loading="lazy">
        </div>
        <nav class="l-footer__nav">
          <ul class="l-footer__nav-list">
            <li class="l-footer__nav-item">
              <a href="">Home</a>
            </li>
            <li class="l-footer__nav-item">
              <a href="">Services</a>
            </li>
            <li class="l-footer__nav-item">
              <a href="">About</a>
            </li>
            <li class="l-footer__nav-item">
              <a href="">Works</a>
            </li>
            <li class="l-footer__nav-item">
              <a href="">Blog</a>
            </li>
            <li class="l-footer__nav-item">
              <a href="">Contact</a>
            </li>
          </ul>
        </nav>
      </div>
      <div class="l-footer__bottom">
        <p class="l-footer__copyright">© BASE10</p>
        <a href="" class="l-footer__bottom-link">プラバシーポリシー</a>
      </div>
    </div>
  </footer>
  <!-- JavaScript -->
  <script src="https://code.jquery.com/jquery-3.5.1.js" is:inline></script>
  <script src="/assets/js/splide/splide.min.js" is:inline></script>
  <script src="/assets/js/common.js" is:inline></script>

